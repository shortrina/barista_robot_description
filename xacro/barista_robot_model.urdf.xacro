<?xml version="1.6"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="barista_robot"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find barista_robot_description)/xacro/wheel.xacro"/>
    <xacro:include filename="$(find barista_robot_description)/xacro/standoff.xacro"/>
    <xacro:include filename="$(find barista_robot_description)/xacro/cup_holder_tray.xacro"/>

    <material name="red">
        <color rgba="1.0 0.0 0.0 1"/>
    </material>

    <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
    </material>

    <material name="light_gray">
        <color rgba="0.83 0.83 0.83 1.0"/>
    </material>

    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <link name="base_link">
    </link>

    <link name="main_body_link">
        <visual>
            <geometry>
                <cylinder length="0.155" radius="0.178"/>
            </geometry>
            <origin xyz="0 0 0.0956" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.155" radius="0.178"/>
            </geometry>
            <origin xyz="0 0 0.0956" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="5"/>
            <origin xyz="0 0 0.0956" rpy="0 0 0"/>
            <inertia ixx="04961541666666666" ixy="0" ixz="0" iyy="04961541666666666" iyz="0" izz="07920999999999999"/>
        </inertial>
    </link>

    <joint name="base_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="base_link"/>
        <child link="main_body_link"/>
    </joint>

    <gazebo reference="main_body_link">
        <material>Gazebo/Blue</material>
    </gazebo>


    <xacro:wheel wheel_name="left_wheel"/>
    <joint name="left_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 0.1 0.0"/>
        <parent link="main_body_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="left_wheel">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>
        <material>Gazebo/Red</material>
    </gazebo>


    <xacro:wheel wheel_name="right_wheel"/>
    <gazebo reference="right_wheel">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>
        <material>Gazebo/Red</material>
    </gazebo>

    <joint name="right_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 -0.1 0.0"/>
        <parent link="main_body_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>


    <!-- Casters -->
    <!-- Caster Wheel Front -->
    <link name="front_yaw_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0.0 0 0.0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0.0 0 0.0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0.0 0 0.0"/>
            <mass value="0.001"/>
            <inertia ixx="5.145833333333334e-09" ixy="0" ixz="0" iyy="5.145833333333334e-09" iyz="0"
                     izz="1.0125000000000003e-08"/>
        </inertial>
    </link>

    <joint name="front_yaw_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.13 0 0.0045"/>
        <parent link="main_body_link"/>
        <child link="front_yaw_link"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="front_yaw_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <link name="front_roll_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="5.145833333333334e-09" ixy="0" ixz="0" iyy="5.145833333333334e-09" iyz="0"
                     izz="1.0125000000000003e-08"/>
        </inertial>
    </link>

    <joint name="front_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="front_yaw_link"/>
        <child link="front_roll_link"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="front_roll_link">
        <material>Gazebo/Black</material>
    </gazebo>


    <link name="front_pitch_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0277"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0277"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.06"/>
            <inertia ixx="1.8414959999999996e-05" ixy="0.0" ixz="0.0" iyy="1.8414959999999996e-05" iyz="0.0"
                     izz="1.8414959999999996e-05"/>
        </inertial>
    </link>

    <gazebo reference="front_pitch_link">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="front_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="front_roll_link"/>
        <child link="front_pitch_link"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- Caster Wheel Back -->
    <link name="back_yaw_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0.0 0.0 0.0"/>
            <mass value="0.001"/>
            <inertia ixx="5.145833333333334e-09" ixy="0" ixz="0" iyy="5.145833333333334e-09" iyz="0"
                     izz="1.0125000000000003e-08"/>
        </inertial>
    </link>

    <joint name="back_yaw_joint" type="continuous">
        <origin rpy="0 0 0" xyz="-0.13 0 0.0045"/>
        <parent link="main_body_link"/>
        <child link="back_yaw_link"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="back_yaw_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <link name="back_roll_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.001" radius="0.0045000000000000005"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="5.145833333333334e-09" ixy="0" ixz="0" iyy="5.145833333333334e-09" iyz="0"
                     izz="1.0125000000000003e-08"/>
        </inertial>
    </link>

    <joint name="back_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="back_yaw_link"/>
        <child link="back_roll_link"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <gazebo reference="back_roll_link">
        <material>Gazebo/Black</material>
    </gazebo>


    <link name="back_pitch_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0277"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0277"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.06"/>
            <inertia ixx="1.8414959999999996e-05" ixy="0.0" ixz="0.0" iyy="1.8414959999999996e-05" iyz="0.0"
                     izz="1.8414959999999996e-05"/>
        </inertial>
    </link>

    <gazebo reference="back_pitch_link">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="back_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="back_roll_link"/>
        <child link="back_pitch_link"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" velocity="100.0"/>
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- standoff_rods -->
    <link name="standoff_rods">
        <xacro:standoff x_pos="0.089" y_pos="0.089"/>
        <xacro:standoff x_pos="-0.089" y_pos="0.089"/>
        <xacro:standoff x_pos="-0.089" y_pos="-0.089"/>
        <xacro:standoff x_pos="0.089" y_pos="-0.089"/>

        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.00040583333333333335" ixy="0" ixz="0" iyy="0.00040583333333333335" iyz="0" izz="5e-06"/>
        </inertial>
    </link>

    <joint name="body_to_standoff_rods_joint" type="fixed">
        <parent link="main_body_link"/>
        <child link="standoff_rods"/>
        <origin xyz="0.0 0.0 0.265" rpy="0 0 0"/>
    </joint>

    <xacro:cup_holder_tray/>
    <joint name="standoff_rods_to_tray_joint" type="fixed">
        <parent link="standoff_rods"/>
        <child link="cup_holder"/>
        <origin xyz="0 0 0.155" rpy="0 0 0"/>
    </joint>

    <gazebo reference="cup_holder">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Laser scanner (conditional) -->
    <xacro:arg name="include_laser" default="true"/>

    <xacro:if value="$(arg include_laser)">
        <xacro:include filename="$(find barista_robot_description)/xacro/laser_scanner.xacro"/>
        <xacro:laser_scanner/>
    </xacro:if>
    <gazebo reference="laser_scanner_model">
        <material>Gazebo/Gray</material>
    </gazebo>

    <!-- PLUGINS -->
    <!-- JOINT PUBLISHER -->
    <gazebo>
        <plugin name="barista_gazebo_robot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
            <ros>
                <remapping>~/out:=joint_states</remapping>
            </ros>
            <update_rate>30</update_rate>

            <joint_name>left_wheel_joint</joint_name>
            <joint_name>right_wheel_joint</joint_name>
            <joint_name>front_yaw_joint</joint_name>
            <joint_name>back_yaw_joint</joint_name>
            <joint_name>front_roll_joint</joint_name>
            <joint_name>back_roll_joint</joint_name>
            <joint_name>front_pitch_joint</joint_name>
            <joint_name>back_pitch_joint</joint_name>
        </plugin>
    </gazebo>

    <!-- Differential drive -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">

            <!-- wheels -->
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>

            <!-- kinematics -->
            <wheel_separation>0.2</wheel_separation>
            <wheel_diameter>0.0352</wheel_diameter>

            <!-- limits -->
            <max_wheel_torque>1.0</max_wheel_torque>
            <max_wheel_acceleration>2.0</max_wheel_acceleration>

            <!-- output -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>

            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>

        </plugin>
    </gazebo>
</robot>